{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "src/generated/**"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "object-curly-spacing": [
            "error"
        ],
        "require-await": [
            "error"
        ],
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": "property",
                "modifiers": ["public"],
                "format": ["snake_case"]
            }
        ]
    }
}
