{
  "compilerOptions": {
    "strict": true,
    /* Basic Options */
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,

    /* Additional Checks */
     "noUnusedLocals": false,
     "noUnusedParameters": false,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,

    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "noLib": false,
    "lib": [ "es6" ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "filesGlob": [
    "./**/*.ts",
  ]
}
